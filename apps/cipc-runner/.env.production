# CIPC Runner Production Environment Configuration
# Copy this to .env for Railway deployment

# Application Settings
ENV=production
PORT=8000
HEADLESS=true
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# Railway Optimizations
RAILWAY_HEALTHCHECK_TIMEOUT=300
RAILWAY_RESTART_POLICY=always

# Database Configuration (Railway provides PostgreSQL automatically)
# DATABASE_URL will be set automatically by Railway
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Temporal Workflow Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=cipc-filing-queue

# CAPTCHA Solving Service
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here
TWOCAPTCHA_TIMEOUT=300
TWOCAPTCHA_POLLING_INTERVAL=5

# Google reCAPTCHA Enterprise (Optional)
GOOGLE_RECAPTCHA_PROJECT_ID=your-google-project-id
GOOGLE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
TWOCAPTCHA_SITE_KEY=6LeS-g8sAAAAAP1R9YS4US6zKEnbAqhh_xZpq6o9
TWOCAPTURE_SECRET_KEY=6LeS-g8sAAAAAIF-1pBZO6MJs81dz72j3_3DvRN2

# WhatsApp Integration (AISensy)
AISENSY_API_KEY=your_aisensy_api_key_here
AISENSY_BASE_URL=https://api.aisensy.com
AISENSY_TIMEOUT=30

# Browser Automation Settings
BROWSER_TIMEOUT=60000
BROWSER_NAVIGATION_TIMEOUT=30000
BROWSER_WAIT_TIMEOUT=10000
SCREENSHOT_ON_ERROR=true

# Security Settings
CORS_ORIGINS=https://cipc-dashboard.workers.dev,https://your-domain.com
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Performance Tuning
MAX_CONCURRENT_FILINGS=3
FILING_TIMEOUT=1800
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Development/Testing Flags
MOCK_FILING=false
DEBUG_SCREENSHOTS=false
VERBOSE_LOGGING=false

# External Service URLs
CIPC_BASE_URL=https://eservices.cipc.co.za
CIPC_LOGIN_URL=https://eservices.cipc.co.za/Login.aspx
CIPC_FILING_URL=https://eservices.cipc.co.za/Filing/AnnualReturns.aspx

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30

# File Storage (for screenshots and documents)
STORAGE_TYPE=local
STORAGE_PATH=/tmp/cipc-files
STORAGE_RETENTION_DAYS=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFICATION_EMAIL=admin@yourcompany.com

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_AUTO_RETRY=true
ENABLE_NOTIFICATIONS=true
