{
  "name": "cipc-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
  "postinstall": "node -e \"try{require('child_process').execSync('npx patch-package',{stdio:'inherit'})}catch(e){}\""
  },
  "packageManager": "pnpm@8.x",
  "engines": {
    "node": "18.x"
  },
  "devDependencies": {
    "rimraf": "^6.1.0",
    "turbo": "^1.9.3"
  }
}
